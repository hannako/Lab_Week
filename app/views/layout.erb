<% if flash[:error] %>
  <div id='notice'><%= flash[:error]%></div>
<%end%>

<% if flash[:notice] %>
  <div id='notice'>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if current_user %>
    Welcome, <%= current_user.username %>
<% end %>

<form action="/sessions" method="post" >
  <input type="hidden" name='_method' value="delete">
  <input type="submit" value="sign out" >
</form>

<form action="/spaces/manage" method="get">
  <input type="submit" value="Manage spaces" />
</form>
<!-- <a href="/spaces/manage">Manage spaces</a> -->

<%= yield %>
